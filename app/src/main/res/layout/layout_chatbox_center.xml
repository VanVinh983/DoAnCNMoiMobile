<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_marginVertical="5dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:background="@drawable/background_message_center"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_gravity="center"
            android:id="@+id/image_message_avatar"
            android:layout_width="27dp"
            android:layout_height="30dp" />
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvUsernameChatBoxLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phan Văn Thông"
                    android:textColor="#000"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/tvTimeSendLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#07b7f7"
                    android:textSize="11dp"
                    android:text=""/>
            </LinearLayout>
            <TextView
                android:id="@+id/txt_content_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đã đổi hình nền của nhóm"
                android:inputType="textMultiLine"
                android:textSize="15dp"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>