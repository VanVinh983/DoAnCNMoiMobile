<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_marginVertical="5dp"
    >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_message_center"
        android:orientation="horizontal"
        android:padding="5dp">
        <ImageView
            android:id="@+id/image_message"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0"
            app:srcCompat="@drawable/avatar" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_message_avatar"
            android:layout_width="27dp"
            android:layout_height="30dp"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/tvUsernameChatBoxLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phan Văn 123"
                    android:textColor="#000"
                    android:textSize="13dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvTimeSendLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text=""
                    android:textColor="#07b7f7"
                    android:textSize="11dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/txt_content_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:text="Đã đổi hình nền của nhóm"
                android:textSize="15dp" />
            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/image_gif"
                android:layout_width="0dp"
                android:layout_height="0dp"/>
            <ImageView
                android:id="@+id/imgDownload"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgReactionOfMessage"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#fff" />


            <TextView
                android:id="@+id/tvQuantityReaction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text=""
                android:textColor="#07b7f7"
                android:textSize="14dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>