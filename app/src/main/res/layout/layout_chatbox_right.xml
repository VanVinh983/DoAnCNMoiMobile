<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:paddingTop="5dp"
    android:paddingRight="10dp"
    android:paddingBottom="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_message_avatar"
        android:layout_width="0.5dp"
        android:layout_height="60dp"
        android:src="@drawable/avatar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/background__right_message"
        android:gravity="right"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/image_message_avatar"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/tvUsernameChatBoxLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phan VÄƒn 123"
            android:textColor="#000"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_content_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:minHeight="48dp"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/image_message_avatar"
            app:layout_constraintTop_toTopOf="@+id/image_message_avatar"
            app:layout_constraintVertical_bias="0.058"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/image_message"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:srcCompat="@drawable/avatar" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/tvTimeSendLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="abc"
                android:textColor="#07b7f7"
                android:textSize="12dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgReactionOfMessage6"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#fff" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgReactionOfMessage5"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:backgroundTint="#fff" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgReactionOfMessage4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:backgroundTint="#fff" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgReactionOfMessage3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:backgroundTint="#fff" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgReactionOfMessage2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:backgroundTint="#fff" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgReactionOfMessage1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:backgroundTint="#fff" />

            <TextView
                android:id="@+id/tvQuantityReaction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text=""
                android:textColor="#07b7f7"
                android:textSize="14dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>